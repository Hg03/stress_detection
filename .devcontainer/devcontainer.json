{
    "name": "Python Dev Environment",
    "dockerComposeFile": "../docker-compose.yaml",
    "service": "dev",
    "workspaceFolder": "/home/devuser/code",
    "shutdownAction": "stopCompose",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.black-formatter",
                "charliermarsh.ruff"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/home/devuser/code/.venv/bin/python",
                "python.terminal.activateEnvironment": false
            }
        }
    },
    "remoteUser": "devuser",
    "postCreateCommand": "echo 'Dev container ready!'"
}
